<?xml version="1.0"?>
<project default="deploy.local" basedir="." name="Deploy jar file to local servers">
	
	<property name="jar.file" value="../../target/MinigamesPlugin.jar"></property>
	
	<target name="calc.deploy">
		<condition property="minecraft.install" else="false">
			<isset property="minecraft.install.servers"/>
		</condition>
	</target>
		
	<target name="deploy.local" if="minecraft.install" depends="calc.deploy">
		<jar destfile="${jar.file}">
			<fileset dir="${basedir}/../../target/classes"></fileset>
			<fileset dir="${basedir}/../../../APIv2/target/classes"></fileset>
		</jar>
		<ant antfile="${minecraft.install.servers}" inheritAll="true" />
	</target>

</project>